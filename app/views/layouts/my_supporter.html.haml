!!! XML
!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "de", :lang => "de"}
  %head
    %title 
      = @title || "Gemeinsam Abnehmen"
    = stylesheet_link_tag "application"
    = #javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" #needed for dynamic user nav
    = javascript_include_tag "application", :media => "all"
    = yield :header
    = csrf_meta_tag
    <META http-equiv="Content-Type" content="text/html; charset=UTF-8">
    = canonical_link
    = render :partial => "/layouts/adserver_head"
  %body
    #wrap
      = render :partial => "/layouts/adsense_analytics"
      = render "shared/navbar"
            
      .container-fluid        
        = ads
        .row-fluid          
        
          .span2
            .well.sidebar-nav
              = render :partial => '/shared/supporter_left_navi', :locals => {:user => @user} unless @user.nil?
          .span7
            = info_text

            = yield
            %span#gplusone
              <g:plusone></g:plusone>
          
          .span2
            = render "/shared/right_wide_skyscraper"
        
    %footer
      = render "/layouts/footer"
        
    .tracking
      = render :partial => "/layouts/google_analytics"
      = yield :tracking

    = render "/layouts/feedback"    
    = #javascript_include_tag '/users/current'
    = render "/layouts/google_plus_one"